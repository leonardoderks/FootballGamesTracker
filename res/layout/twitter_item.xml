<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageViewTwitterImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textViewTwitterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imageViewTwitterImage"
        android:paddingTop="1dp"
        android:text="TextView"
        style="@style/tweetTitleText" 
        android:textColor="@color/sysDkGray"
        />

    <TextView
        android:id="@+id/editTextTwittDesc"
        style="@style/timeLineItemDescText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTwitterName"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textViewTwitterName"
        android:layout_marginRight="5dp"
        android:clickable="false"        
        android:lines="4"
        android:maxLines="5"
        android:padding="1dp"
        android:paddingLeft="3dp" >       
    </TextView>

    <ImageView
        android:id="@+id/imageViewTwittImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextTwittDesc"
        android:layout_below="@+id/editTextTwittDesc"
        android:paddingLeft="3dp"       
         />
    
    <ProgressBar
        android:id="@+id/imgProgress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextTwittDesc"       
        android:layout_below="@+id/editTextTwittDesc"
        android:layout_centerVertical="true"
        android:paddingLeft="3dp"
         />

    <TextView
        android:id="@+id/textViewTwitterAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewTwittImage"
        android:layout_below="@+id/imageViewTwittImage"
        android:layout_marginTop="5dp"        
        android:text="TextView"
        android:textSize="10sp" 
        android:paddingLeft="3dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewTwitterScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextTwittDesc"
        android:layout_alignRight="@+id/editTextTwittDesc"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:textSize="10sp" 
        android:paddingTop="3dp"
        android:text="TextView"
        android:textColor="@color/sysDkGray" />

    <TextView
        android:id="@+id/textViewAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewTwitterImage"
        android:layout_below="@+id/imageViewTwitterImage"
        android:paddingTop="15dp"
        android:paddingLeft="2dp"
        android:textSize="10sp" 
        android:text="15 min"
        android:textColor="@color/sysDkGray" />

</RelativeLayout>