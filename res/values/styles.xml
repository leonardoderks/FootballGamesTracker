<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
<!--         <item name="android:actionMenuTextColor">#000</item> -->
    </style>
    
	<!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
<!--         <item name="android:background">#f12</item> -->
<!--         <item name="android:textColor">#000</item> -->
    </style>
    
    <style name="MyActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
<!--         <item name="android:textColor">@color/sysBlack</item> -->
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText"
           parent="@android:style/Widget.Holo.ActionBar.TabText">
<!--         <item name="android:textColor">@color/sysBlack</item> -->
    </style>
    
    <style name="NormalRowText">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">16sp</item> 
    </style>
    
    <style name="tweetTitleText">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">Calibri</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="timeLineItemDescText">
        <item name="android:textColor">#737373</item>
        <item name="android:fontFamily">Verdana</item>
        <item name="android:textSize">14sp</item>    
    </style>
     <style name="ItemDescText">
        <item name="android:textColor">#737373</item>
        <item name="android:fontFamily">Verdana</item>
        <item name="android:textSize">15sp</item>    
    </style>

    
</resources>
